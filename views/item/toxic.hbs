<div class="container">
  {{>home-tab route='normalSolven'}}
  <div class="mt-3">
    {{>item-tab route ='toxic' }}
    <div style="display: flex;">
      <div class="mt-3 ">
        <a href="/item/create" class="btn btn-outline-primary btn-block">新增品項</a>
      </div>
      <form action="/item/toxic" method="GET">
        <div class="input-group mt-3 ms-3" style="width: 350px;">
          <input type="text" class="form-control" name="toxicSearch" placeholder="搜尋毒化物(ex:CasNo./縮寫)"
            aria-label="Recipient's username" aria-describedby="button-addon2" value="{{keyWord}}">
          <button class="btn btn-outline-primary" type="submit" id="button-addon2">搜尋</button>
        </div>
      </form>
    </div>
    <div class="row">
      {{#each toxicSolven}}
      {{>share-item}}
      {{/each}}
    </div>
  </div>