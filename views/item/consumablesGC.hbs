<div class="container">


  {{>home-tab route='consumables'}}
  <div class="mt-3">
    {{>consumables-tab route ='consumablesGC' }}
    <div style="display: flex;">
      <div class="mt-3 ">
        <a href="/item/create" class="btn btn-outline-primary btn-block">新增品項</a>
      </div>
      <form action="/item/consumablesGC" method="GET">
        <div class="input-group mt-3 ms-3" style="width: 350px;">
          <input type="text" class="form-control" name="consumablesGC" placeholder="關鍵字搜尋(ex:CasNo./縮寫)"
            aria-label="Recipient's username" aria-describedby="button-addon2" value="{{keyWord}}">
          <button class="btn btn-outline-primary" type="submit" id="button-addon2">搜尋</button>
        </div>
      </form>
        <div class="ms-3">
          <nav class="mt-3" aria-label="page navigation">
            <ul class="pagination">
              <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
                <a class="page-link" href="/item/consumablesGC?page={{pagination.prev}}" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              {{#each pagination.pages}}
              {{#ifCond this ../pagination.currentPage}}
              <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
              {{else}}
              <li class="page-item">
                <a class="page-link" href="/item/consumablesGC?page={{this}}">{{this}}</a>
              </li>
              {{/ifCond}}
              {{/each}}
              <li class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
                <a class="page-link" href="/item/consumablesGC?page={{pagination.next}}" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
    </div>
    <div class="row">

      {{#each consumablesGC}}
      {{>share-item}}
      {{/each}}


    </div>

  </div>