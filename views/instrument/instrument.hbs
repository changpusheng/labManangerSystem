<div class="check-container">
  {{>home-tab route='instrument'}}
  <hr>
  <div class="row mt-3">
    <div class="col-md-5 mt-3">
      <div class="card">
        <div class="card-header">
          待確認儀器
        </div>
        <div class="card-body" style="overflow-y:auto;height:30rem;display:block;">
          {{#if instruments.length}}
          <table class="table">
            <thead>
              <tr>
                <th scope="col">品名</th>
                <th scope="col">#</th>
                <th scope="col">#</th>
              </tr>
            </thead>
            <tbody>
              {{#each instruments}}
              <tr>
                <td scope="row">{{this.name}}</td>
                <td scope="row">
                  <form action="/instrument/open/{{this._id}}" method="POST">
                    <button type="submit" class="btn btn-outline-primary">開機</button>
                  </form>
                </td>
                <td scope="row">
                  <form action="/instrument/close/{{this._id}}" method="POST">
                    <button type="submit" class="btn btn-outline-danger">未開機</button>
                  </form>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{else}}
          <div class="input-group-text justify-content-center fs-5 fw-bold">無確認項目 </div>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="col-md-7 mt-3">
      <div class="card">
        <div class="card-header">
          {{currentDay}}確認項目
        </div>
        <div class="card-body" style="overflow-y:auto;height:30rem;display:block;">
          {{#if records.length}}
          <table class="table">
            <thead>
              <tr>
                <th scope="col">確認日期</th>
                <th scope="col">儀器編號</th>
                <th scope="col">是否開機</th>
                <th scope="col">確認人員</th>
              </tr>
            </thead>
            <tbody>
              {{#each records}}
              <tr>
                <td scope="row">{{currentYearMonDate this.createAt}}</td>
                <td scope="row">{{this.instrumentId.name}}</td>
                <td scope="row">{{#if this.isOpen}}是{{/if}}{{#if this.isClose}}否{{/if}}</td>
                <td scope="row">{{this.userId.name}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          {{else}}
          <div class="input-group-text justify-content-center fs-5 fw-bold">無完成項目 </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>