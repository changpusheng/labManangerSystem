{{>home-tab route ='home' }}
<hr>
<div class="row mt-3">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header ">
        低於安全存量共{{itemObjs.length}}筆
      </div>
      <div class="card-body" style="overflow-y:auto;height:200px;display:block;">
        {{#if itemObjs.length}}
        <div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">編號</th>
                <th scope="col">類別</th>
                <th scope="col">品名</th>
                <th scope="col">庫存</th>
                <th scope="col">功能</th>
              </tr>
            </thead>
            <tbody>
              {{#each itemObjs}}
              <tr>
                <th scope="row">{{toLastNumber this._id}}</th>
                <th scope="row">{{this.categoryId.name}}</th>
                <td>{{this.name}}</td>
                <td>{{toFixed this.stock 3}}{{this.unitId.name}}</td>
                <td><a href="/item/shopping-object/{{this._id}}" class="btn btn-outline-success">請購</a></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <hr>
        </div>
        {{else}}
        <div class="input-group-text justify-content-center fs-5 fw-bold">低於安全存量項目:無
        </div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        未結案共{{buyIsDone.length}}筆
      </div>
      <div class="card-body" style="overflow-y:auto;height:200px;display:block;">
        {{#if buyIsDone.length}}
        <div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">小量化學編號</th>
                <th scope="col">類別</th>
                <th scope="col">品名</th>
                <th scope="col">購買數量</th>
                <th scope="col">請購人</th>
                <th scope="col">功能</th>
              </tr>
            </thead>
            <tbody>
              {{#each buyIsDone}}
              <tr>
                <th scope="row">{{this.commit}}</th>
                <td>{{this.itemId.categoryId.name}}</td>
                <td>{{this.itemId.name}}</td>
                <td>{{this.number}}{{this.itemId.unitId.name}}</td>
                <td>{{this.userId.name}}</td>
                <td><a href="/item/objectsave/{{this.itemId._id}}" class="btn btn-outline-primary">結案</a></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <hr>
        </div>
        {{else}}
        <div class="input-group-text justify-content-center fs-5 fw-bold">未結案項目:無</div>
        {{/if}}
      </div>
    </div>
  </div>
  <div class="col-md-12 mt-3">
    <div class="card">
      <div class="card-header">
        毒化物領用記錄(近5筆)(依時間排序:第一筆為最新日期))
      </div>
      <div class="card-body" style="overflow-y:auto;height:300px;display:block;">
        {{#if acnRecordobjs.length}}
        <div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">編號</th>
                <th scope="col">時間</th>
                <th scope="col">品名</th>
                <th scope="col">領用量(kg)</th>
                <th scope="col">入庫量(kg)</th>
                <th scope="col">剩餘庫存量(kg)</th>
                <th scope="col">使用人</th>
                <th scope="col">確認</th>
              </tr>
            </thead>
            <tbody>
              {{#each acnRecordobjs}}
              <tr>
                <th scope="row">{{toLastNumber this._id}}</th>
                <th scope="row">{{this.createAt}}</th>
                <td>{{this.itemId.name}}</td>
                <td>{{toFixed this.outNumber 3}}</td>
                <td>{{toFixed this.inputNumber 3}}</td>
                <td>{{toFixed this.stockNumber 3}}</td>
                <td>{{this.userId.name}}</td>
                <form action="/item/toxic-isCheck/{{this._id}}" method="POST">
                  <td><button type="submit" {{#if this.isCheck}}class="btn btn-outline-success" disabled {{else}}
                      class="btn btn-outline-primary" onclick="return confirm(`確認單號{{toLastNumber this._id}}?`)"
                      {{/if}}>
                      {{#if this.isCheck}}
                      完成
                      {{else}}
                      確認
                      {{/if}}</a></td>
                </form>
              </tr>
              {{/each}}
            </tbody>
          </table>
          <hr>
        </div>
        {{else}}
        <div class="input-group-text justify-content-center fs-5 fw-bold">無ACN使用紀錄</div>
        {{/if}}
      </div>
    </div>
  </div>
</div>